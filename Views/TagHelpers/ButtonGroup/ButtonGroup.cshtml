<script src="~/jqwidgets/jqxbuttongroup.js"></script>

@{
    ViewData["Title"] = "ASP .NET MVC ButtonGroup Example";
}
Default Mode
<jqx-buttongroup theme="@ViewData["Theme"]" id='jqxWidget'>
    <button style="padding:4px 16px;">
        Left
    </button>
    <button style="padding:4px 16px;">
        Center
    </button>
    <button style="padding:4px 16px;">
        Right
    </button>
</jqx-buttongroup>
Radio Mode
<jqx-buttongroup theme="@ViewData["Theme"]" mode="radio">
    <button style="padding:4px 16px;">
        Left
    </button>
    <button style="padding:4px 16px;">
        Center
    </button>
    <button style="padding:4px 16px;">
        Right
    </button>
</jqx-buttongroup>
CheckBox Mode
<jqx-buttongroup theme="@ViewData["Theme"]" mode="checkbox">
    <button style="padding:4px 16px;">
        Left
    </button>
    <button style="padding:4px 16px;">
        Center
    </button>
    <button style="padding:4px 16px;">
        Right
    </button>
</jqx-buttongroup>